<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BPageThree_CoordinateLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.sd.BoltActivity">

    <ScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="88dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:text="@string/Factored_Load"/>
                <TextView
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/BPageThree_FactoredLoad"
                    android:textColor="@color/colorWhite"
                    android:text="@string/Factored_Load"/>

            </LinearLayout>
            <View
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="@string/Section"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextViewForSection"
                    android:id="@+id/BPAgeThree_TV_section_l"
                    android:text="@string/Value_l"/>
                <ImageButton
                    android:background="@color/colorPrimary"
                    android:layout_height="26dp"
                    style="@style/TextViewForSection"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_close_black_24dp"/>
                <TextView
                    style="@style/TextViewForSection"
                    android:id="@+id/BPAgeThree_TV_section_h"
                    android:text="@string/Value_h"/>
                <ImageButton
                    android:background="@color/colorPrimary"
                    android:layout_height="26dp"
                    style="@style/TextViewForSection"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_close_black_24dp"/>
                <TextView
                    style="@style/TextViewForSection"
                    android:id="@+id/BPAgeThree_TV_section_t"
                    android:text="@string/Value_t"/>
            </LinearLayout>
            <View
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite"/>
            <GridLayout
                android:rowCount="6"
                android:columnCount="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/SlendernessRatio"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/SlendernessRatio"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:id="@+id/BPageThree_TV_SlendernessRatio"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdg"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdg"
                    android:id="@+id/BPageThree_TV_Tdg"
                    android:layout_row="1"
                    android:layout_column="1"/>

                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdn"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdn"
                    android:layout_row="2"
                    android:id="@+id/BPageThree_TV_Tdn"
                    android:layout_column="1"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/B"
                    android:layout_row="3"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/B"
                    android:layout_row="3"
                    android:id="@+id/BPageThree_TV_B"
                    android:layout_column="1"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdb"
                    android:layout_row="4"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Tdb"
                    android:id="@+id/BPageThree_TV_Tdb"
                    android:layout_row="4"
                    android:layout_column="1"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Td"
                    android:layout_row="5"
                    android:layout_column="0"/>
                <TextView
                    style="@style/GridLayoutTextView"
                    android:text="@string/Td"
                    android:layout_row="5"
                    android:id="@+id/BPageThree_TV_Td"
                    android:layout_column="1"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/BPageThree_FABNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_chevron_right_white_24dp"
        android:layout_margin="16dp"
        android:layout_gravity="end|bottom"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/BPageThree_FABPrevious"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_chevron_left_white_24dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"/>
</android.support.design.widget.CoordinatorLayout>
